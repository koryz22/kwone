  <script>
    (function() {
      // Check if popup was already dismissed
      const popupDismissed = localStorage.getItem('newsletter-popup-dismissed');
      if (popupDismissed) {
        return;
      }

      const popup = document.getElementById('newsletter-popup');
      const closeBtn = document.getElementById('newsletter-popup-close');
      const form = document.getElementById('popup-newsletter-form');
      const messageEl = document.getElementById('popup-newsletter-message');
      const submitBtn = document.getElementById('popup-newsletter-submit');
      const emailInput = document.getElementById('popup-newsletter-email');

      // Show popup after 10 seconds
      setTimeout(function() {
        if (popup && !popupDismissed) {
          popup.style.display = 'flex';
          document.body.style.overflow = 'hidden';
        }
      }, 10000);

      // Close button handler
      if (closeBtn) {
        closeBtn.addEventListener('click', function() {
          popup.style.display = 'none';
          document.body.style.overflow = '';
          localStorage.setItem('newsletter-popup-dismissed', 'true');
        });
      }

      // Close on overlay click
      const overlay = popup?.querySelector('.newsletter-popup-overlay');
      if (overlay) {
        overlay.addEventListener('click', function() {
          popup.style.display = 'none';
          document.body.style.overflow = '';
          localStorage.setItem('newsletter-popup-dismissed', 'true');
        });
      }

      // Form submission
      if (form) {
        form.addEventListener('submit', async function(e) {
          e.preventDefault();

          const email = emailInput.value.trim();
          if (!email) return;

          const originalText = submitBtn.textContent;
          submitBtn.disabled = true;
          submitBtn.textContent = 'SUBSCRIBING...';

          try {
            const randomPassword = Math.random().toString(36).slice(-12) + Math.random().toString(36).slice(-12);

            const customerData = new URLSearchParams();
            customerData.append('form_type', 'customer');
            customerData.append('utf8', '✓');
            customerData.append('customer[email]', email);
            customerData.append('customer[password]', randomPassword);
            customerData.append('customer[password_confirmation]', randomPassword);
            customerData.append('customer[accepts_marketing]', 'true');
            customerData.append('customer[tags]', 'newsletter,interested');

            const customerResponse = await fetch('/account', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'Accept': 'text/html,application/xhtml+xml'
              },
              body: customerData,
              redirect: 'manual'
            });

            if (customerResponse.status === 200 || customerResponse.status === 302 || customerResponse.status === 0) {
              messageEl.textContent = 'Success! Check your email for your 20% off code.';
              messageEl.className = 'newsletter-popup-message-text success';
              messageEl.style.display = 'block';
              emailInput.value = '';
              
              // Close popup after 3 seconds
              setTimeout(() => {
                popup.style.display = 'none';
                document.body.style.overflow = '';
                localStorage.setItem('newsletter-popup-dismissed', 'true');
              }, 3000);
            } else {
              throw new Error('Subscription failed');
            }
          } catch (error) {
            console.error('Newsletter signup error:', error);
            messageEl.textContent = 'Something went wrong. Please try again.';
            messageEl.className = 'newsletter-popup-message-text error';
            messageEl.style.display = 'block';

            setTimeout(() => {
              messageEl.style.display = 'none';
            }, 5000);
          } finally {
            submitBtn.disabled = false;
            submitBtn.textContent = originalText;
          }
        });
      }
    })();
  </script>
