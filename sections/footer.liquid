{% comment %}
  Section: footer.liquid
  Purpose: Professional footer with brand message and newsletter
{% endcomment %}

<footer class="site-footer" role="contentinfo">
  <div class="footer-wrapper">

    <div class="footer-grid">

      <!-- Brand Message -->
      <div class="footer-brand">
        <p class="footer-brand-message">{{ section.settings.brand_message }}</p>
      </div>

      <!-- Newsletter -->
      {% if section.settings.show_newsletter %}
        <div class="footer-newsletter">
          <p class="newsletter-label">{{ section.settings.newsletter_title | default: 'Join the newsletter' }}</p>
          <form class="newsletter-form" id="newsletter-form" action="/contact" method="post" accept-charset="UTF-8">
            <input type="hidden" name="form_type" value="contact">
            <input type="hidden" name="utf8" value="✓">

            <div class="newsletter-input-wrapper">
              <input
                type="email"
                name="contact[email]"
                id="newsletter-email"
                class="newsletter-input"
                placeholder="{{ section.settings.email_placeholder | default: 'Enter your email' }}"
                required
                aria-label="Email address"
              >
              <button type="submit" class="newsletter-submit" id="newsletter-submit">
                {{ section.settings.subscribe_button | default: 'Subscribe' }}
              </button>
            </div>

            <div class="newsletter-message" id="newsletter-message" style="display: none;"></div>
          </form>
        </div>
      {% endif %}

    </div>

    <!-- Copyright -->
    <div class="footer-bottom">
      <p class="footer-copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ section.settings.copyright_text | default: shop.name | upcase }}. All rights reserved.
      </p>
    </div>

  </div>
</footer>

<style>
  .site-footer {
    min-height: 100vh;
    width: 100%;
    border-top: none;
    margin-top: 0;
    background: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 8rem 0;
  }

  .footer-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-xl);
    width: 100%;
  }

  /* Footer Grid - Centered */
  .footer-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 6rem;
    align-items: center;
  }

  /* Footer Bottom - Fixed at bottom */
  .footer-bottom {
    position: absolute;
    bottom: 4rem;
    left: 0;
    right: 0;
    text-align: center;
  }

  /* Brand Message */
  .footer-brand {
    display: flex;
    justify-content: flex-end;
    padding-right: 3rem;
  }

  .footer-brand-message {
    font-family: var(--font-serif);
    font-size: 1.1rem;
    font-weight: 300;
    font-style: italic;
    line-height: 1.8;
    color: var(--color-text-secondary);
    margin: 0;
    max-width: 400px;
    text-align: right;
  }

  /* Newsletter */
  .footer-newsletter {
    padding-left: 3rem;
  }

  .newsletter-label {
    font-family: var(--font-serif);
    font-size: 1rem;
    font-weight: 300;
    font-style: italic;
    color: var(--color-text-secondary);
    margin: 0 0 1.2rem 0;
  }

  .newsletter-form {
    width: 100%;
    max-width: 350px;
  }

  .newsletter-input-wrapper {
    display: flex;
    gap: 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }

  .newsletter-input {
    flex: 1;
    background: transparent;
    border: none;
    padding: 0.8rem 0;
    color: var(--color-text);
    font-size: 0.9rem;
    font-family: var(--font-sans);
    letter-spacing: 0.02em;
    transition: all 0.3s ease;
  }

  .newsletter-input::placeholder {
    color: var(--color-text-muted);
    opacity: 0.5;
  }

  .newsletter-input:focus {
    outline: none;
  }

  .newsletter-submit {
    background: transparent;
    color: var(--color-text);
    border: none;
    padding: 0.8rem 0 0.8rem 1.5rem;
    font-size: 0.85rem;
    font-family: var(--font-sans);
    letter-spacing: 0.05em;
    font-weight: 400;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
    opacity: 0.7;
  }

  .newsletter-submit:hover {
    opacity: 1;
  }

  .newsletter-message {
    margin-top: 1rem;
    font-size: 0.85rem;
    font-family: var(--font-sans);
  }

  .newsletter-message.success {
    color: #4ade80;
  }

  .newsletter-message.error {
    color: #f87171;
  }

  .footer-copyright {
    font-size: 1rem;
    color: var(--color-text-muted);
    font-family: var(--font-sans);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    margin: 0;
    opacity: 0.6;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 4rem;
      text-align: center;
    }

    .footer-brand {
      justify-content: center;
      padding-right: 0;
    }

    .footer-brand-message {
      text-align: center;
      max-width: 100%;
    }

    .footer-newsletter {
      padding-left: 0;
      display: flex;
      justify-content: center;
    }

    .newsletter-form {
      max-width: 100%;
    }
  }

  @media (max-width: 768px) {
    .site-footer {
      padding: 8rem 0 4rem;
    }

    .footer-wrapper {
      padding: 0 var(--spacing-md);
    }

    .footer-grid {
      gap: 3rem;
      margin-bottom: 5rem;
    }

    .newsletter-label {
      text-align: center;
    }

    .newsletter-form {
      max-width: 100%;
    }

    .footer-bottom {
      padding-top: 3rem;
    }
  }
</style>

<script>
(function() {
  const form = document.getElementById('newsletter-form');
  const messageEl = document.getElementById('newsletter-message');
  const submitBtn = document.getElementById('newsletter-submit');
  const emailInput = document.getElementById('newsletter-email');

  if (!form) return;

  form.addEventListener('submit', async function(e) {
    e.preventDefault();

    const email = emailInput.value.trim();
    if (!email) return;

    const originalText = submitBtn.textContent;
    submitBtn.disabled = true;
    submitBtn.textContent = 'JOINING...';

    try {
      const randomPassword = Math.random().toString(36).slice(-12) + Math.random().toString(36).slice(-12);

      const customerData = new URLSearchParams();
      customerData.append('form_type', 'customer');
      customerData.append('utf8', '✓');
      customerData.append('customer[email]', email);
      customerData.append('customer[password]', randomPassword);
      customerData.append('customer[password_confirmation]', randomPassword);
      customerData.append('customer[accepts_marketing]', 'true');
      customerData.append('customer[tags]', 'newsletter,interested');

      const customerResponse = await fetch('/account', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/x-www-form-urlencoded',
          'Accept': 'text/html,application/xhtml+xml'
        },
        body: customerData,
        redirect: 'manual'
      });

      if (customerResponse.status === 200 || customerResponse.status === 302 || customerResponse.status === 0) {
        messageEl.textContent = 'Welcome to the journey.';
        messageEl.className = 'newsletter-message success';
        messageEl.style.display = 'block';
        emailInput.value = '';

        setTimeout(() => {
          messageEl.style.display = 'none';
        }, 5000);
      } else {
        throw new Error('Subscription failed');
      }
    } catch (error) {
      console.error('Newsletter signup error:', error);
      messageEl.textContent = 'Something went wrong. Please try again.';
      messageEl.className = 'newsletter-message error';
      messageEl.style.display = 'block';

      setTimeout(() => {
        messageEl.style.display = 'none';
      }, 5000);
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = originalText;
    }
  });
})();
</script>

