{% comment %}
  Section: footer.liquid
  Purpose: Professional footer with brand message and newsletter
{% endcomment %}

<footer class="site-footer" role="contentinfo">
  <div class="footer-wrapper">

    <!-- Newsletter -->
    {% if section.settings.show_newsletter %}
      <div class="footer-newsletter">
        <h2 class="newsletter-heading">{{ section.settings.newsletter_title | default: 'JOIN OUR NEWSLETTER' }}</h2>
        <form class="newsletter-form" id="newsletter-form" action="/contact" method="post" accept-charset="UTF-8">
          <input type="hidden" name="form_type" value="contact">
          <input type="hidden" name="utf8" value="✓">

          <div class="newsletter-input-wrapper">
            <input
              type="email"
              name="contact[email]"
              id="newsletter-email"
              class="newsletter-input"
              placeholder="{{ section.settings.email_placeholder | default: 'EMAIL ADDRESS' }}"
              required
              aria-label="Email address"
            >
            <button type="submit" class="newsletter-submit" id="newsletter-submit">
              {{ section.settings.subscribe_button | default: 'SUBSCRIBE' }}
            </button>
          </div>

          <div class="newsletter-message" id="newsletter-message" style="display: none;"></div>
        </form>
      </div>
    {% endif %}

    <!-- Copyright -->
    <div class="footer-bottom">
      <p class="footer-copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ section.settings.copyright_text | default: shop.name | upcase }}. All rights reserved.
      </p>
    </div>

  </div>
</footer>

<style>
  .site-footer {
    width: 100%;
    border-top: none;
    margin-top: 0;
    background: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 6rem 0;
  }

  .footer-wrapper {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--spacing-xl);
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* Footer Bottom */
  .footer-bottom {
    margin-top: 6rem;
    text-align: center;
  }

  /* Newsletter */
  .footer-newsletter {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 900px;
  }

  .newsletter-heading {
    font-family: var(--font-sans);
    font-size: 1.5rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.7);
    margin: 0 0 2.5rem 0;
    text-align: center;
  }

  .newsletter-form {
    width: 100%;
    max-width: 800px;
  }

  .newsletter-input-wrapper {
    display: flex;
    gap: 1rem;
    width: 100%;
  }

  .newsletter-input {
    flex: 1;
    background: rgba(40, 40, 40, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 8px;
    padding: 1rem 1.5rem;
    color: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
    font-family: var(--font-sans);
    letter-spacing: 0.02em;
    transition: all 0.3s ease;
    min-height: 50px;
  }

  .newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 1rem;
  }

  .newsletter-input:focus {
    outline: none;
    border-color: rgba(255, 255, 255, 0.3);
    background: rgba(50, 50, 50, 0.9);
  }

  .newsletter-submit {
    background: rgba(40, 40, 40, 0.8);
    color: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 8px;
    padding: 1rem 2.5rem;
    font-size: 0.95rem;
    font-family: var(--font-sans);
    letter-spacing: 0.1em;
    font-weight: 400;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
    min-height: 50px;
  }

  .newsletter-submit:hover {
    background: rgba(50, 50, 50, 0.9);
    border-color: rgba(255, 255, 255, 0.3);
    color: rgba(255, 255, 255, 1);
  }

  .newsletter-submit:active {
    transform: scale(0.98);
  }

  .newsletter-message {
    margin-top: 1rem;
    font-size: 0.85rem;
    font-family: var(--font-sans);
  }

  .newsletter-message.success {
    color: #4ade80;
  }

  .newsletter-message.error {
    color: #f87171;
  }

  .footer-copyright {
    font-size: 1rem;
    color: var(--color-text-muted);
    font-family: var(--font-sans);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    margin: 0;
    opacity: 0.6;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .site-footer {
      padding: 4rem 0 3rem;
    }

    .footer-wrapper {
      padding: 0 var(--spacing-md);
    }

    .newsletter-heading {
      font-size: 1.2rem;
      margin-bottom: 2rem;
    }

    .newsletter-input-wrapper {
      flex-direction: column;
      gap: 1rem;
    }

    .newsletter-input,
    .newsletter-submit {
      width: 100%;
      padding: 1rem 1.25rem;
      font-size: 0.95rem;
      min-height: 48px;
    }

    .footer-bottom {
      margin-top: 4.5rem;
    }
  }
</style>

<script>
(function() {
  const form = document.getElementById('newsletter-form');
  const messageEl = document.getElementById('newsletter-message');
  const submitBtn = document.getElementById('newsletter-submit');
  const emailInput = document.getElementById('newsletter-email');

  if (!form) return;

  form.addEventListener('submit', async function(e) {
    e.preventDefault();

    const email = emailInput.value.trim();
    if (!email) return;

    const originalText = submitBtn.textContent;
    submitBtn.disabled = true;
    submitBtn.textContent = 'JOINING...';

    try {
      const randomPassword = Math.random().toString(36).slice(-12) + Math.random().toString(36).slice(-12);

      const customerData = new URLSearchParams();
      customerData.append('form_type', 'customer');
      customerData.append('utf8', '✓');
      customerData.append('customer[email]', email);
      customerData.append('customer[password]', randomPassword);
      customerData.append('customer[password_confirmation]', randomPassword);
      customerData.append('customer[accepts_marketing]', 'true');
      customerData.append('customer[tags]', 'newsletter,interested');

      const customerResponse = await fetch('/account', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/x-www-form-urlencoded',
          'Accept': 'text/html,application/xhtml+xml'
        },
        body: customerData,
        redirect: 'manual'
      });

      if (customerResponse.status === 200 || customerResponse.status === 302 || customerResponse.status === 0) {
        messageEl.textContent = 'Welcome to the journey.';
        messageEl.className = 'newsletter-message success';
        messageEl.style.display = 'block';
        emailInput.value = '';

        setTimeout(() => {
          messageEl.style.display = 'none';
        }, 5000);
      } else {
        throw new Error('Subscription failed');
      }
    } catch (error) {
      console.error('Newsletter signup error:', error);
      messageEl.textContent = 'Something went wrong. Please try again.';
      messageEl.className = 'newsletter-message error';
      messageEl.style.display = 'block';

      setTimeout(() => {
        messageEl.style.display = 'none';
      }, 5000);
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = originalText;
    }
  });
})();
</script>

