{% comment %}
  Section: footer.liquid
  Purpose: Professional footer with email collection and links
{% endcomment %}

<footer class="site-footer" role="contentinfo">
  <div class="footer-wrapper">
    
    {% comment %} Newsletter Signup Section {% endcomment %}
    {% if section.settings.show_newsletter %}
      <div class="footer-newsletter">
        <h3 class="newsletter-title">{{ section.settings.newsletter_title | default: 'JOIN OUR NEWSLETTER' }}</h3>
        <form class="newsletter-form" id="newsletter-form" action="/contact" method="post" accept-charset="UTF-8">
          <input type="hidden" name="form_type" value="contact">
          <input type="hidden" name="utf8" value="✓">
          
          <div class="newsletter-input-wrapper">
            <input 
              type="email" 
              name="contact[email]" 
              id="newsletter-email" 
              class="newsletter-input" 
              placeholder="{{ section.settings.email_placeholder | default: 'EMAIL ADDRESS' }}"
              required
              aria-label="Email address"
            >
            <button type="submit" class="newsletter-submit" id="newsletter-submit">
              {{ section.settings.subscribe_button | default: 'SUBSCRIBE' }}
            </button>
          </div>
          
          <div class="newsletter-message" id="newsletter-message" style="display: none;"></div>
          
          {% if section.settings.show_disclaimer %}
            <p class="newsletter-disclaimer">{{ section.settings.disclaimer_text }}</p>
          {% endif %}
        </form>
      </div>
    {% endif %}

    {% comment %} Copyright Only {% endcomment %}
    <div class="footer-bottom">
      <p class="footer-copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ section.settings.copyright_text | default: shop.name | upcase }}. All rights reserved.
      </p>
    </div>

  </div>
</footer>

<style>
  .site-footer {
    padding: var(--spacing-lg) 0;
    border-top: none;
    margin-top: var(--spacing-md);
  }

  .footer-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-xl);
  }

  /* Newsletter Section */
  .footer-newsletter {
    margin-bottom: var(--spacing-lg);
    padding-bottom: var(--spacing-lg);
    border-bottom: none;
    text-align: center;
  }

  .newsletter-title {
    font-size: 1.1rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    margin-bottom: var(--spacing-md);
    color: var(--color-text-secondary);
    font-family: var(--font-sans);
  }

  .newsletter-form {
    max-width: 600px;
    margin: 0 auto;
  }

  .newsletter-input-wrapper {
    display: flex;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-sm);
  }

  .newsletter-input {
    flex: 1;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid var(--color-border);
    padding: 1rem 1.5rem;
    color: var(--color-text);
    font-size: 0.9rem;
    font-family: var(--font-sans);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    transition: var(--transition);
    border-radius: var(--radius-sm);
  }

  .newsletter-input::placeholder {
    color: var(--color-text-muted);
    opacity: 0.5;
  }

  .newsletter-input:focus {
    outline: none;
    border-color: var(--color-border-hover);
    background: rgba(255, 255, 255, 0.05);
  }

  .newsletter-submit {
    background: rgba(255, 255, 255, 0.03);
    color: var(--color-text);
    border: 1px solid var(--color-border);
    padding: 1rem 2rem;
    font-size: 0.85rem;
    font-family: var(--font-sans);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-weight: 400;
    cursor: pointer;
    transition: var(--transition);
    white-space: nowrap;
    border-radius: var(--radius-sm);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
  }

  .newsletter-submit::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
    opacity: 0;
    transition: var(--transition);
  }

  .newsletter-submit:hover {
    background: rgba(255, 255, 255, 0.06);
    border-color: var(--color-border-hover);
    color: var(--color-text);
    transform: translateY(-1px);
  }

  .newsletter-submit:hover::before {
    opacity: 1;
  }

  .newsletter-message {
    margin-top: var(--spacing-sm);
    font-size: 0.85rem;
    padding: var(--spacing-sm);
  }

  .newsletter-message.success {
    color: #4ade80;
  }

  .newsletter-message.error {
    color: #f87171;
  }

  .newsletter-disclaimer {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    font-family: var(--font-mono);
    margin-top: var(--spacing-sm);
    max-width: 600px;
  }

  .newsletter-disclaimer a {
    text-decoration: underline;
    color: var(--color-text-muted);
  }

  /* Footer Content Grid */
  .footer-content-grid {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: var(--spacing-lg);
    padding-bottom: var(--spacing-lg);
    border-bottom: none;
  }

  .footer-brand-centered {
    text-align: center;
    max-width: 800px;
  }

  .footer-brand-text {
    font-size: 1.2rem;
    line-height: 1.8;
    color: var(--color-text);
    font-family: var(--font-mono);
    letter-spacing: 0.02em;
    margin-bottom: var(--spacing-sm);
  }

  .footer-brand-tagline {
    font-size: 1.2rem;
    line-height: 1.8;
    color: var(--color-text-muted);
    font-family: var(--font-mono);
    font-style: italic;
  }

  .footer-logo-wrapper {
    margin-bottom: var(--spacing-sm);
  }

  .footer-logo-image {
    max-width: 150px;
    height: auto;
  }

  .footer-location {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-family: var(--font-sans);
  }

  .footer-social-title {
    font-size: 1.1rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--spacing-xs);
    color: var(--color-text);
    font-family: var(--font-sans);
  }

  .footer-social-link {
    font-size: 1rem;
    color: var(--color-text);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: opacity 0.3s ease;
    font-family: var(--font-sans);
  }

  .footer-social-link:hover {
    opacity: 0.6;
  }

  /* Footer Links */
  .footer-links {
    margin-bottom: var(--spacing-lg);
    text-align: center;
  }

  .footer-links-row {
    display: flex;
    gap: var(--spacing-lg);
    flex-wrap: wrap;
    justify-content: center;
  }

  .footer-link {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-family: var(--font-mono);
    transition: color 0.3s ease;
  }

  .footer-link:hover {
    color: var(--color-text);
  }

  /* Footer Bottom */
  .footer-bottom {
    text-align: center;
    padding-top: var(--spacing-sm);
  }

  .footer-copyright {
    font-size: 1.2rem;
    color: var(--color-text-muted);
    font-family: var(--font-sans);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0;
    opacity: 0.7;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .footer-brand-centered {
      max-width: 100%;
      padding: 0 var(--spacing-sm);
    }

    .newsletter-input-wrapper {
      flex-direction: column;
    }

    .newsletter-submit {
      width: 100%;
    }
  }

  @media (max-width: 768px) {
    .site-footer {
      padding: var(--spacing-lg) var(--spacing-sm) var(--spacing-md);
    }

    .footer-newsletter {
      margin-bottom: var(--spacing-lg);
      padding-bottom: var(--spacing-lg);
    }

    .footer-links-row {
      flex-direction: column;
      gap: var(--spacing-sm);
    }
  }
</style>

<script>
(function() {
  const form = document.getElementById('newsletter-form');
  const messageEl = document.getElementById('newsletter-message');
  const submitBtn = document.getElementById('newsletter-submit');
  const emailInput = document.getElementById('newsletter-email');

  if (!form) return;

  form.addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const email = emailInput.value.trim();
    if (!email) return;

    // Disable submit button
    const originalText = submitBtn.textContent;
    submitBtn.disabled = true;
    submitBtn.textContent = 'SUBSCRIBING...';

    try {
      // Method 1: Try to create customer account (appears in Customers tab)
      // Generate a random password for account creation
      const randomPassword = Math.random().toString(36).slice(-12) + Math.random().toString(36).slice(-12);
      
      const customerData = new URLSearchParams();
      customerData.append('form_type', 'customer');
      customerData.append('utf8', '✓');
      customerData.append('customer[email]', email);
      customerData.append('customer[password]', randomPassword);
      customerData.append('customer[password_confirmation]', randomPassword);
      customerData.append('customer[accepts_marketing]', 'true');
      customerData.append('customer[tags]', 'newsletter,interested');

      const customerResponse = await fetch('/account', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/x-www-form-urlencoded',
          'Accept': 'text/html,application/xhtml+xml'
        },
        body: customerData,
        redirect: 'manual'
      });

      // If customer creation succeeds (or email already exists), show success
      if (customerResponse.status === 200 || customerResponse.status === 302 || customerResponse.status === 0) {
        messageEl.textContent = 'Thank you for subscribing!';
        messageEl.className = 'newsletter-message success';
        messageEl.style.display = 'block';
        emailInput.value = '';
        
        setTimeout(() => {
          messageEl.style.display = 'none';
        }, 5000);
      } else {
        // Fallback: Use contact form (emails will be in contact form submissions)
        const contactData = new URLSearchParams();
        contactData.append('form_type', 'contact');
        contactData.append('utf8', '✓');
        contactData.append('contact[email]', email);
        contactData.append('contact[body]', 'Newsletter signup - Please add to customer list');
        contactData.append('contact[tags]', 'newsletter');

        const contactResponse = await fetch('/contact', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
            'Accept': 'application/json'
          },
          body: contactData
        });

        if (contactResponse.ok) {
          messageEl.textContent = 'Thank you for subscribing!';
          messageEl.className = 'newsletter-message success';
          messageEl.style.display = 'block';
          emailInput.value = '';
          
          setTimeout(() => {
            messageEl.style.display = 'none';
          }, 5000);
        } else {
          throw new Error('Subscription failed');
        }
      }
    } catch (error) {
      console.error('Newsletter signup error:', error);
      messageEl.textContent = 'Something went wrong. Please try again.';
      messageEl.className = 'newsletter-message error';
      messageEl.style.display = 'block';
      
      setTimeout(() => {
        messageEl.style.display = 'none';
      }, 5000);
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = originalText;
    }
  });
})();
</script>

