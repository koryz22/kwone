{% comment %}
  Section: footer.liquid
  Purpose: Professional footer with brand message and newsletter
{% endcomment %}

<footer class="site-footer" role="contentinfo">
  <div class="footer-wrapper">

    <div class="footer-content-grid">
      <!-- Brand Message -->
      <div class="footer-brand-message">
        <h3 class="footer-movement-title">JOIN THE MOVEMENT</h3>
        <p class="footer-hashtag">#kwoneaccessories</p>
        <p class="footer-message-text">At KWONE, we believe that discipline and confidence are the foundations for success.</p>
      </div>

      <!-- Newsletter -->
      {% if section.settings.show_newsletter %}
        <div class="footer-newsletter">
          {%- if section.settings.newsletter_title != blank -%}
            <h2 class="newsletter-heading">{{ section.settings.newsletter_title }}</h2>
          {%- endif -%}
          {%- form 'customer', id: 'ContactFooter', class: 'newsletter-form' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="newsletter-form__field-wrapper">
              <div class="field newsletter-field">
                <input
                  id="NewsletterForm--{{ section.id }}"
                  type="email"
                  name="contact[email]"
                  class="newsletter-input field__input"
                  value="{{ form.email }}"
                  aria-required="true"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  {% if form.errors %}
                    autofocus
                    aria-invalid="true"
                    aria-describedby="ContactFooter-error"
                  {% elsif form.posted_successfully? %}
                    aria-describedby="ContactFooter-success"
                  {% endif %}
                  placeholder="{{ section.settings.email_placeholder | default: 'Enter your email...' }}"
                  required
                >
                <label class="field__label" for="NewsletterForm--{{ section.id }}">
                  {{ section.settings.email_placeholder | default: 'Enter your email...' }}
                </label>
                <button
                  type="submit"
                  class="newsletter-submit field__button"
                  name="commit"
                  id="Subscribe"
                  aria-label="{{ section.settings.subscribe_button | default: 'newsletter.button_label' | t }}"
                >
                  {{ section.settings.subscribe_button | default: 'SUBSCRIBE' }}
                </button>
              </div>
              {%- if form.errors -%}
                <small class="newsletter-form__message newsletter-form__message--error form__message" id="ContactFooter-error">
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email -}}
                </small>
              {%- endif -%}
            </div>
            {%- if form.posted_successfully? -%}
              <h3
                class="newsletter-form__message newsletter-form__message--success form__message"
                id="ContactFooter-success"
                tabindex="-1"
                autofocus
              >
                {{- 'newsletter.success' | t -}}
              </h3>
            {%- endif -%}
          {%- endform -%}
        </div>
      {% endif %}
    </div>

    <!-- Copyright -->
    <div class="footer-bottom">
      <p class="footer-copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ section.settings.copyright_text | default: shop.name | upcase }}. All rights reserved.
      </p>
    </div>

  </div>
</footer>

<style>
  .site-footer {
    width: 100%;
    border-top: none;
    margin-top: 0;
    background: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 6rem 0;
  }

  .footer-wrapper {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--spacing-xl);
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* Footer Content Grid */
  .footer-content-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 6rem;
    width: 100%;
    align-items: start;
    max-width: 1200px;
  }

  /* Brand Message */
  .footer-brand-message {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
  }


  .footer-movement-title {
    font-family: var(--font-sans);
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: rgba(255, 255, 255, 1);
    margin: 0 0 0.5rem 0;
    line-height: 1.2;
  }

  .footer-hashtag {
    font-family: var(--font-sans);
    font-size: clamp(1.8rem, 3.5vw, 2.5rem);
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    margin: 0 0 1.5rem 0;
    line-height: 1.3;
    letter-spacing: 0.02em;
    text-align: left;
  }

  .footer-message-text {
    font-family: var(--font-sans);
    font-size: 1.1rem;
    font-weight: 300;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
    text-align: left;
  }

  /* Footer Bottom */
  .footer-bottom {
    margin-top: 6rem;
    text-align: center;
  }

  /* Newsletter */
  .footer-newsletter {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 100%;
  }

  .newsletter-heading {
    font-family: var(--font-sans);
    font-size: 1.5rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.7);
    margin: 0 0 2.5rem 0;
    text-align: center;
  }

  .newsletter-form {
    width: 100%;
    max-width: 800px;
  }

  .newsletter-form__field-wrapper {
    width: 100%;
  }

  .newsletter-field {
    display: flex;
    gap: 1rem;
    width: 100%;
    position: relative;
  }

  .newsletter-field .field__label {
    position: absolute;
    left: -9999px;
    width: 1px;
    height: 1px;
    overflow: hidden;
  }

  .newsletter-input {
    flex: 1;
    background: rgba(40, 40, 40, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 8px;
    padding: 1rem 1.5rem;
    color: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
    font-family: var(--font-sans);
    letter-spacing: 0.02em;
    transition: all 0.3s ease;
    min-height: 50px;
    width: 100%;
  }

  .newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 1rem;
  }

  .newsletter-input:focus {
    outline: none;
    border-color: rgba(255, 255, 255, 0.3);
    background: rgba(50, 50, 50, 0.9);
  }

  .newsletter-input[aria-invalid="true"] {
    border-color: #f87171;
  }

  .newsletter-submit {
    background: rgba(40, 40, 40, 0.8);
    color: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 8px;
    padding: 1rem 2.5rem;
    font-size: 0.95rem;
    font-family: var(--font-sans);
    letter-spacing: 0.1em;
    font-weight: 400;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
    min-height: 50px;
  }

  .newsletter-submit:hover {
    background: rgba(50, 50, 50, 0.9);
    border-color: rgba(255, 255, 255, 0.3);
    color: rgba(255, 255, 255, 1);
  }

  .newsletter-submit:active {
    transform: scale(0.98);
  }

  .newsletter-form__message {
    margin-top: 1rem;
    font-size: 0.85rem;
    font-family: var(--font-sans);
    display: block;
  }

  .newsletter-form__message--success {
    color: #4ade80;
  }

  .newsletter-form__message--error {
    color: #f87171;
  }

  .footer-copyright {
    font-size: 1rem;
    color: var(--color-text-muted);
    font-family: var(--font-sans);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    margin: 0;
    opacity: 0.6;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .site-footer {
      padding: 4rem 0 3rem;
    }

    .footer-wrapper {
      padding: 0 var(--spacing-md);
    }

    .footer-content-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .footer-brand-message {
      text-align: left;
    }

    .footer-message-text {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }

    .footer-movement-title {
      font-size: clamp(2rem, 5vw, 2.8rem);
      margin-bottom: 1.5rem;
    }

    .footer-hashtag {
      font-size: clamp(1.5rem, 4vw, 2.2rem);
      margin-top: 0;
      text-align: left;
    }

    .footer-newsletter {
      align-items: flex-end;
    }

    .newsletter-heading {
      font-size: 1.2rem;
      margin-bottom: 2rem;
      text-align: center;
    }

    .newsletter-field {
      flex-direction: column;
      gap: 1rem;
    }

    .newsletter-input,
    .newsletter-submit {
      width: 100%;
      padding: 1rem 1.25rem;
      font-size: 0.95rem;
      min-height: 48px;
    }

    .footer-bottom {
      margin-top: 4.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "Brand Message"
    },
    {
      "type": "text",
      "id": "brand_title",
      "label": "Brand title",
      "default": "KWONE"
    },
    {
      "type": "textarea",
      "id": "brand_message",
      "label": "Brand message",
      "default": "Built for men who understand that confidence is crafted, not given."
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show newsletter",
      "default": true
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter title",
      "default": "Get exclusive sales, release dates, and more."
    },
    {
      "type": "text",
      "id": "email_placeholder",
      "label": "Email placeholder",
      "default": "Enter your email..."
    },
    {
      "type": "text",
      "id": "subscribe_button",
      "label": "Subscribe button text",
      "default": "SUBSCRIBE"
    },
    {
      "type": "header",
      "content": "Copyright"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright text",
      "default": "KWONE"
    }
  ]
}
{% endschema %}
