{% comment %}
  Section: footer.liquid
  Purpose: Professional footer with brand message and newsletter
{% endcomment %}

<footer class="site-footer" role="contentinfo">
  <div class="footer-wrapper">

    <div class="footer-content-grid">
      <!-- Brand Message -->
      <div class="footer-brand-message">
        <h3 class="footer-movement-title">JOIN THE MOVEMENT</h3>
        <p class="footer-hashtag">#kwoneaccessories</p>
        <p class="footer-message-text">At KWONE, we believe that discipline and confidence are the foundations for success.</p>
      </div>

      <!-- Newsletter -->
      {% if section.settings.show_newsletter %}
        <div class="footer-newsletter">
          <h2 class="newsletter-heading">{{ section.settings.newsletter_title | default: 'Get exclusive sales, release dates, and more.' }}</h2>

          {% comment %} Hidden form with Shopify's CSRF token - uses Liquid form tag {% endcomment %}
          {% form 'create_customer', id: 'newsletter-form', class: 'newsletter-form-hidden' %}
            <input type="hidden" name="customer[email]" id="newsletter-email-hidden">
            <input type="hidden" name="customer[first_name]" id="newsletter-firstname-hidden">
            <input type="hidden" name="customer[password]" id="newsletter-password-hidden">
            <input type="hidden" name="customer[password_confirmation]" id="newsletter-password-confirm-hidden">
            <input type="hidden" name="customer[accepts_marketing]" value="true">
            <input type="hidden" name="customer[tags]" value="newsletter,interested">
          {% endform %}

          <div class="newsletter-input-wrapper">
            <input
              type="email"
              id="newsletter-email"
              class="newsletter-input"
              placeholder="{{ section.settings.email_placeholder | default: 'EMAIL ADDRESS' }}"
              required
              aria-label="Email address"
            >
            <button type="button" class="newsletter-submit" id="newsletter-submit">
              {{ section.settings.subscribe_button | default: 'SUBSCRIBE' }}
            </button>
          </div>

          <div class="newsletter-message" id="newsletter-message" style="display: none;"></div>
        </div>
      {% endif %}
    </div>

    <!-- Copyright -->
    <div class="footer-bottom">
      <p class="footer-copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ section.settings.copyright_text | default: shop.name | upcase }}. All rights reserved.
      </p>
    </div>

  </div>
</footer>

<style>
  .site-footer {
    width: 100%;
    border-top: none;
    margin-top: 0;
    background: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 6rem 0;
  }

  .footer-wrapper {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--spacing-xl);
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* Footer Content Grid */
  .footer-content-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 6rem;
    width: 100%;
    align-items: start;
    max-width: 1200px;
  }

  /* Brand Message */
  .footer-brand-message {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
  }


  .footer-movement-title {
    font-family: var(--font-sans);
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: rgba(255, 255, 255, 1);
    margin: 0 0 0.5rem 0;
    line-height: 1.2;
  }

  .footer-hashtag {
    font-family: var(--font-sans);
    font-size: clamp(1.8rem, 3.5vw, 2.5rem);
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    margin: 0 0 1.5rem 0;
    line-height: 1.3;
    letter-spacing: 0.02em;
    text-align: left;
  }

  .footer-message-text {
    font-family: var(--font-sans);
    font-size: 1.1rem;
    font-weight: 300;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
    text-align: left;
  }

  /* Footer Bottom */
  .footer-bottom {
    margin-top: 6rem;
    text-align: center;
  }

  /* Newsletter */
  .footer-newsletter {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 100%;
  }

  .newsletter-heading {
    font-family: var(--font-sans);
    font-size: 1.5rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255, 255, 255, 0.7);
    margin: 0 0 2.5rem 0;
    text-align: center;
  }

  .newsletter-form {
    width: 100%;
    max-width: 800px;
  }

  .newsletter-form-hidden {
    display: none !important;
  }

  .newsletter-input-wrapper {
    display: flex;
    gap: 1rem;
    width: 100%;
  }

  .newsletter-input {
    flex: 1;
    background: rgba(40, 40, 40, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 8px;
    padding: 1rem 1.5rem;
    color: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
    font-family: var(--font-sans);
    letter-spacing: 0.02em;
    transition: all 0.3s ease;
    min-height: 50px;
  }

  .newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 1rem;
  }

  .newsletter-input:focus {
    outline: none;
    border-color: rgba(255, 255, 255, 0.3);
    background: rgba(50, 50, 50, 0.9);
  }

  .newsletter-submit {
    background: rgba(40, 40, 40, 0.8);
    color: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 8px;
    padding: 1rem 2.5rem;
    font-size: 0.95rem;
    font-family: var(--font-sans);
    letter-spacing: 0.1em;
    font-weight: 400;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
    min-height: 50px;
  }

  .newsletter-submit:hover {
    background: rgba(50, 50, 50, 0.9);
    border-color: rgba(255, 255, 255, 0.3);
    color: rgba(255, 255, 255, 1);
  }

  .newsletter-submit:active {
    transform: scale(0.98);
  }

  .newsletter-message {
    margin-top: 1rem;
    font-size: 0.85rem;
    font-family: var(--font-sans);
  }

  .newsletter-message.success {
    color: #4ade80;
  }

  .newsletter-message.error {
    color: #f87171;
  }

  .footer-copyright {
    font-size: 1rem;
    color: var(--color-text-muted);
    font-family: var(--font-sans);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    margin: 0;
    opacity: 0.6;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .site-footer {
      padding: 4rem 0 3rem;
    }

    .footer-wrapper {
      padding: 0 var(--spacing-md);
    }

    .footer-content-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .footer-brand-message {
      text-align: left;
    }

    .footer-message-text {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }

    .footer-movement-title {
      font-size: clamp(2rem, 5vw, 2.8rem);
      margin-bottom: 1.5rem;
    }

    .footer-hashtag {
      font-size: clamp(1.5rem, 4vw, 2.2rem);
      margin-top: 0;
      text-align: left;
    }

    .footer-newsletter {
      align-items: flex-end;
    }

    .newsletter-heading {
      font-size: 1.2rem;
      margin-bottom: 2rem;
      text-align: center;
    }

    .newsletter-input-wrapper {
      flex-direction: column;
      gap: 1rem;
    }

    .newsletter-input,
    .newsletter-submit {
      width: 100%;
      padding: 1rem 1.25rem;
      font-size: 0.95rem;
      min-height: 48px;
    }

    .footer-bottom {
      margin-top: 4.5rem;
    }
  }
</style>

<script>
(function() {
  const form = document.getElementById('newsletter-form');
  const messageEl = document.getElementById('newsletter-message');
  const submitBtn = document.getElementById('newsletter-submit');
  const emailInput = document.getElementById('newsletter-email');

  if (!form) return;

  // Handle form submission using Shopify's form with CSRF token
  submitBtn.addEventListener('click', async function(e) {
    e.preventDefault();

    const email = emailInput.value.trim();
    if (!email) return;

    // Show loading state
    const originalText = submitBtn.textContent;
    submitBtn.disabled = true;
    submitBtn.textContent = 'JOINING...';

    try {
      // Generate random password for customer account
      const randomPassword = Math.random().toString(36).slice(-12) + Math.random().toString(36).slice(-12);
      const emailName = email.split('@')[0];
      const firstName = emailName.charAt(0).toUpperCase() + emailName.slice(1);

      // Set values in the hidden form fields
      document.getElementById('newsletter-email-hidden').value = email;
      document.getElementById('newsletter-firstname-hidden').value = firstName;
      document.getElementById('newsletter-password-hidden').value = randomPassword;
      document.getElementById('newsletter-password-confirm-hidden').value = randomPassword;

      // Submit the form via fetch using FormData (includes Shopify's CSRF token)
      const formData = new FormData(form);

      const response = await fetch(form.action, {
        method: 'POST',
        body: formData,
        credentials: 'same-origin'
      });

      // Check response for success
      // 200/302 = success, 422 = customer already exists (also OK)
      const isSuccess = response.ok || response.status === 422 || response.redirected;

      if (isSuccess || response.status === 0) {
        // Show success message
        messageEl.textContent = 'Welcome to the journey. Check your email for your 10% off code!';
        messageEl.className = 'newsletter-message success';
        messageEl.style.display = 'block';
        emailInput.value = '';
      } else {
        // Try to get error message from response
        const text = await response.text();
        if (text.includes('email has already been taken') || text.includes('already exists')) {
          messageEl.textContent = 'You\'re already subscribed! Check your email for updates.';
          messageEl.className = 'newsletter-message success';
        } else {
          messageEl.textContent = 'Welcome to the journey. Check your email for your 10% off code!';
          messageEl.className = 'newsletter-message success';
        }
        messageEl.style.display = 'block';
        emailInput.value = '';
      }

      setTimeout(() => {
        messageEl.style.display = 'none';
      }, 5000);
    } catch (error) {
      console.error('Subscription error:', error);
      // Show success anyway to prevent email harvesting
      messageEl.textContent = 'Welcome to the journey. Check your email for your 10% off code!';
      messageEl.className = 'newsletter-message success';
      messageEl.style.display = 'block';
      emailInput.value = '';
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = originalText;
    }
  });
})();
</script>

